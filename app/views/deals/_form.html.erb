<%= form_for @deal do |f| %>
  <p>
    <%= f.text_field :name, placeholder: "Deal Name" %>
  </p>
  <p>
    <%= f.text_area :description, placeholder: "Description" %>
  </p>
  <p>
    <%= f.text_field :price, placeholder: "Price" %>
  </p>
  <p>
    <%= f.text_field :threshold, placeholder: "Threshold" %>
  </p>
  <p>
    <%= f.date_field :start_date, placeholder: "Start Date" %>
  </p>
  <p>
    <%= f.date_field :end_date, placeholder: "End Date" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
