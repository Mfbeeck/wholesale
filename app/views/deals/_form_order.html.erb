<%= form_for @order do |f| %>
  <p><%= f.label :quantity %>: <%= f.number_field :quantity, step: 1 %></p>
  <p><%= f.hidden_field :consumer_id, { :value => current_consumer.id } %></p>
  <p><%= f.hidden_field :deal_id, { :value => @deal.id } %></p>
  <p>
    <%= f.submit :data => { :confirm => "Are you sure you want to place this order?" }%>
  </p>
<% end %>
