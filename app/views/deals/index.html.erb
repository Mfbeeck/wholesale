<%= link_to 'Consumer Dashboard', new_consumer_session_path %>
<%= link_to 'Supplier Dashboard', new_supplier_session_path %>

<h1>Deals</h1>
<% @deals.each do |deal| %>
  <ul>
    <li><strong>Deal Name:</strong> <%= deal.name %></li>
    <li><strong>Deal Description:</strong> <%= deal.description %></li>
    <li><strong>Deal Price:</strong> <%= deal.price %></li>
    <li><strong>Supplier:</strong> <%= deal.supplier.company_name %></li>
    <li>
      <% if current_consumer || current_supplier %>
        <%= link_to 'Order Now', deal %>
      <% else %>
        <%= link_to 'Order Now', new_consumer_session_path %>
      <% end %>
    </li>
  </ul>
<% end %>

<%= link_to 'New Deal', new_deal_path %>
