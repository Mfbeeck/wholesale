<div class = "deals_list">


<h1>Deals</h1>
<% @deals.each do |deal| %>
  <ul class = "deal_block">
    <% if current_consumer || current_supplier %>
      <li class="image_product" ><%= link_to(image_tag("#{deal.url}", :size => "300x250"), deal)%></li>
    <%else%>
      <li class="image_product"><%= link_to(image_tag("#{deal.url}", :size => "300x250"), new_consumer_session_path)%></li>
    <%end%>
      <li><strong>Product:</strong> <%= deal.name %></li>
      <li><strong>Ticket price:</strong> <%= number_to_currency(deal.price) %></li>
  </ul>
<% end %>
</div>


<% if current_consumer %>
  <div class="consumer_column">
    <ul id="consumer_profile">
    	<li><h3>Username: <%= current_consumer.username %></h3></li>
    </ul>
  </div>
<%end%>

<ul>
<li>
<%= check_box_tag(:product_type, "Electronics") %>
<%= label_tag(:product_type, "Electronics") %>
</li>
<li>
<%= check_box_tag(:product_type, "Video Games") %>
<%= label_tag(:product_type, "Video Games") %>
</li>
</ul>

<br>
<% if current_supplier %>
<%= link_to 'New Deal', new_deal_path %>
<% end %>
