<div class = "deals_list">
<%= check_box_tag(:product_type, "Electronics") %>
<%= label_tag(:product_type, "Electronics") %>
<%= check_box_tag(:product_type, "Video Games") %>
<%= label_tag(:product_type, "Video Games") %>

<h1>Deals</h1>
<% @deals.each do |deal| %>
  <ul class = "deal_block">
      <li><%= link_to(image_tag("#{deal.url}", :size => "250x200"), deal)%></li>
      <li><strong>Deal Name:</strong> <%= deal.name %></li>
      <li><strong>Deal Description:</strong> <%= deal.description %></li>
      <li><strong>Deal Price:</strong> <%= number_to_currency(deal.price) %></li>
      <li><strong>Supplier:</strong> <%= deal.supplier.company_name %></li>
  </ul>
<% end %>
</div>


<% if current_consumer %>
  <div class="consumer_column">
    <ul id="consumer_profile">
    	<li><h1>Consumer: <%= current_consumer.username %></h1></li>
      <li>Username: <%= current_consumer.username %></li>
      <li>Email: <%= current_consumer.email %></li>
    	<%= link_to "Edit", edit_consumer_path(current_consumer) %><br>
    </ul>
  </div>
<%end%>

<br>
<% if current_supplier %>
<%= link_to 'New Deal', new_deal_path %>
<% end %>
