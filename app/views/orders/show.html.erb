<div class="order_show">
  <div id="order_info">
  <ul>
  <% if @deal.orders.count < @deal.threshold %>
        <li id="product_link"><strong>Product: </strong><%= link_to "#{@deal.name}", @deal %></li>
        <li><strong>Participant's Limit:</strong> <%= @deal.threshold %></li>
        <li><strong>Current Number of Participants:</strong> <%= @deal.orders.count %> (<%= @deal.threshold - @deal.orders.count %> Remaining)</li>
        <li><strong>Shipping Address:</strong> <%= @order.address %>
          <span id="updateaddress"><%= link_to 'Update your address', edit_consumer_order_path(current_consumer, @order) %></span>
        </li>
    <%else%>
        <%if @deal.winning_consumer.nil?%>
            <li id="product_link"><strong>Product: </strong><%= link_to "#{@deal.name}", @deal %></li>
            <li><strong>Participant's Limit:</strong> <%= @deal.threshold %></li>
            <li><strong>Current Number of Participants:</strong> <%= @deal.orders.count %> (<%= @deal.threshold - @deal.orders.count %> Remaining)</li>
            <li><strong>Shipping Address:</strong> <%= @order.address%>
              <span id="updateaddress"><%= link_to 'Update your address', edit_consumer_order_path(current_consumer, @order)%></span>
            </li>
        <%else%>
            <% if @deal.winning_consumer == current_consumer.username%>
                <li><strong>***The lottery for the <%=@deal.name%> has ended and YOU were the winner! Your item will be shipped shortly to: <%=@deal.winners_shipping_address%></li>
                <div class="fb-share-button" data-href="http://parlayvous.herokuapp.com/deals/<%=@deal.id%>" data-layout="button"></div>
            <%else%>
                <li><strong>The lottery for the <%=@deal.name%> has ended and the winner was: <%=@deal.winning_consumer%></li>
            <%end%>
        <%end%>   
    <% end %>
  </ul>

<%= link_to 'Back To Orders', orders_path(current_consumer) %>

</div>
</div>
