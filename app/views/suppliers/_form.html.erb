<%= form_for @supplier do |f| %>
  <% @supplier.errors.full_messages.each do |error| %>
    <li style="color:red"><%= error %></li>
  <% end %>
  <p>
    <%= f.label :email, class: 'required'%><br/>
    <%= f.text_field :email, placeholder: "E-mail" %>
  </p>
  <li>
    <%= f.label :username, class: 'required'%><br/>
    <%= f.text_field :username, placeholder: "Username" %>
  </li>
  <li>
    <%= f.label :password, class: 'required'%><br/>
    <%= f.password_field :password, placeholder: "Password" %>
  </li>
  <li>
    <%= f.label "Confirm Password", class: 'required'%><br/>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
  </li>
  <li>
    <%= f.label :company_name, class: 'required'%><br/>
    <%= f.text_field :company_name, placeholder: "Company Name" %>
  </li>
  <p>
    <%= f.submit %>
  </p>
<% end %>
