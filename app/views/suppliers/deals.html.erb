<h3>Manage your deals here </h3>
<p>(<%= link_to 'Create New Lottery', new_deal_path %>)</p>


<% @supplier.deals.each do |deal| %>
  <ul class = "supplier-deals-list">
    <%# if !deal.url.empty? %>
    <!-- Shouldn't use this because it should always show a square of that size to keep the divs aligned even if no image is chosen or if is a broken url -->
    <li class="image_product"><%= link_to(image_tag("#{deal.url}", :size => "200x150"), deal)%></li>
    <%#end%>
    <li><strong>Item: </strong><%= link_to "#{deal.name}", deal %></li>
    <li><strong>Bid Price:</strong> <%= number_to_currency(deal.price) %></li>
    <li><strong>Participant Limit:</strong> <%= deal.threshold %></li>

    <%if deal.winning_consumer%>
    <li><strong>Status: </strong><span style = "color: green">Winner Chosen</span></li>
    <%else%>
    <li><strong>Status: </strong><span style = "color:red">Awaiting <%=pluralize(deal.threshold - deal.orders.count, "Participant")%></span></li>
    <%end%>
    <li>
    <%= link_to 'Edit Item', edit_supplier_deal_path(@supplier, deal) %>
    <% if deal.winning_consumer%>
     | <%= link_to 'Winner Details', suppliers_deals_path(@supplier)%>
    <%end%>
    </li>


  </ul>
<% end %>
